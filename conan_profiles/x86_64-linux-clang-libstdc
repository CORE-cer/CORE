[settings]
arch=x86_64
compiler=clang
compiler.cppstd=gnu23
compiler.libcxx=libstdc++11
compiler.version=19
os=Linux
[buildenv]
C=clang
CXX=clang++
[conf]
# Force C17 for autotools dependencies (m4, gmp) - fixes C23 incompatibility
gmp/*:tools.build:cflags=["-std=gnu17"]
m4/*:tools.build:cflags=["-std=gnu17"]
